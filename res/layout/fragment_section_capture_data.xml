<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<TextView android:id="@+id/text_status"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:textSize="18sp"
		    android:textStyle="bold"
		    android:padding="5dp"
		    android:layout_marginTop="10dp"
		/>
	
    <!-- <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"> -->
            		            
        
         
	<!--  </LinearLayout>-->

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:rowCount="5"
            android:columnCount="2"
            android:layout_marginTop="10dp">

        <Button android:id="@+id/button_start_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_capture"
            android:text="capture"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_row="4" />
        
        <TextView
                android:id="@+id/text_file_prefix"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="File prefix:"
                android:layout_column="0"
                android:layout_row="0"/>
        <EditText
                android:id="@+id/edit_file_prefix"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_column="1"
                android:layout_row="0"/>

        <TextView
                android:id="@+id/text_subject"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Subject name:"
                android:layout_column="0"
                android:layout_row="1"/>
        <EditText
                android:id="@+id/edit_subject"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_column="1"
                android:layout_row="1"/>

        <TextView
                android:id="@+id/text_shoes"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Shoes:"
                android:layout_column="0"
                android:layout_row="2"/>
        <EditText
                android:id="@+id/edit_shoes"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_column="1"
                android:layout_row="2"/>

        <TextView
                android:id="@+id/text_terrain"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Terrain:"
                android:layout_column="0"
                android:layout_row="3"/>
        <EditText
                android:id="@+id/edit_terrain"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_column="1"
                android:layout_row="3"/>
    </GridLayout>

</FrameLayout>
